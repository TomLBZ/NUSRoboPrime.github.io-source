                    <a  href="<%- url_for(post.path) %>">
                        <%= post.title %>
                    </a>
                </div>
                <div class="meta">
                    <span class="meta-item">
                        <span class="iconfont icon-time-circle"></span>
                        <span><%- date(page.date, "YYYY/MM/DD") %></span>
                    </span>
                    <% if (page.categories) { %> 
                    <span class="meta-item">
                        <span class="iconfont icon-folder"></span>
                        <span>
