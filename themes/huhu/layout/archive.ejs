                                <% if (page.categories.data[j] && page.categories.data[j].name) { %>
                                <a href="/categories/<%- page.categories.data[j].name %>"><%- page.categories.data[j].name %></a>
                                <% } %>
                            <% } %>
                        </span>
                    </span>
                    <% } %>

                    <% if (page.tags) { %> 
                    <span class="meta-item">
                        <span class="iconfont icon-tag1"></span>
